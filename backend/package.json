{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "none",
  "private": true,
  "scripts": {
    "test": "truffle test",
    "clean": "rm -rf build types",
    "generate-types-truffle": "typechain --target=truffle-v5 './build/contracts/*.json'",
    "coverage": "truffle run coverage",
    "migrate": "tsc -p ./tsconfig.migrate.json --outDir migrations && truffle migrate",
    "generate-types-client": "./node_modules/.bin/typechain --target=web3-v1 './build/contracts/*.json'",
    "postinstall": "yarn clean && truffle compile && yarn generate-types-truffle && yarn generate-types-client"
  },
  "devDependencies": {
    "@truffle/hdwallet-provider": "^2.0.8",
    "@typechain/truffle-v5": "^8.0.0",
    "@typechain/web3-v1": "^6.0.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/web3": "^1.2.2",
    "common": "1.0.0",
    "solidity-coverage": "^0.8.0-beta.1",
    "truffle-typings": "^1.0.8",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "ts-node": "^10.7.0"
  },
  "workspaces": {
    "nohoist": [
      "solidity-coverage",
      "solidity-coverage/**"
    ]
  }
}
